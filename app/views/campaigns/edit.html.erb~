      <% end %>
    </ul>
  <% end %>

  <div class="row">
    <div class="large-12 columns">

      <div class="large-2 columns">
        <label class="inline">Titolo: </label>
      </div>
      <div class="large-10 columns">
        <%= f.text_field :title %>
      </div>

      <div class="large-2 columns">
        <label class="inline">Categoria: </label>
      </div>
      <div class="large-10 columns">
        <%= f.select :category_id, Category.all.map { |c| [c.name, c.id] } %>
      </div>

      <div class="large-2 columns">
        <label class="inline">Descrizione: </label>
      </div>
      <div class="large-10 columns">
        <%= f.text_area :description, :rows => 4 %>
      </div>

      <div class="large-2 columns">
        <label class="inline">Immagine: </label>
      </div>
      <div class="large-10 columns">
        <%= f.file_field :image_url %>
      </div>
    </div>
  </div>
  <br/>
  <div class="row">
    <div class="large-12 columns">
      <div class="panel">
        <h4 class="inline_text">Budget totale prefissato: </h4>
        <h5 class="inline_text"><strong><%= number_to_currency @campaign.target, unit: 'â‚¬', :separator => ",", :delimiter => "." %></strong></h5>
        <br/>
        <hr/>
        <h4 class="inline_text">Termine della campagna: </h4> 
        <h5 class="inline_text"><strong><%= @campaign.expiration.strftime("%d-%m-%Y %H:%M") %></strong></h5>
      </div>
      <br/>
      <%= f.submit "Conferma la modifica", class: "button large-12" %>
    </div>
  </div><!--div row-->
<% end %>
