<h1>Listing campaigns</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Target</th>
      <th>Budget</th>
      <th>Expiration</th>
      <th>Image url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.user_id %></td>
        <td><%= campaign.title %></td>
        <td><%= campaign.description %></td>
        <td><%= campaign.target %></td>
        <td><%= campaign.budget %></td>
        <td><%= campaign.expiration %></td>
        <td><%= campaign.image_url %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

