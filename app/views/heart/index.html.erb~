  <p id="notice" ><%= notice %></p>
<% end %>

<h1>Campaign Active</h1>
<% @campaigns.each do |campaign| %>
	<div class="entry" >
		<%= image_tag(campaign.image_url, :class => 'list_image') %>

		<h3><%= campaign.title %></h3>
		<h4><%= campaign.category_id %></h4>
		<%=sanitize campaign.description %>
		<div class="target_line" >
			<span class="target" ><%= number_to_currency(campaign.target, unit: "€", separator: ",", delimiter: ".", format: "%n %u") %></span>
		</div>
		<div class="budget_line" >
			<span class="budget" ><%= number_to_currency(campaign.budget, unit: "€", separator: ",", delimiter: ".", format: "%n %u") %></span>
		</div>
	</div>
<% end %>
